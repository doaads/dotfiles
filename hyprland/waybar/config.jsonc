{
    "layer": "top",
    "position": "top",
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["custom/news", "network", "upower", "power-profiles-daemon", "pulseaudio", "group/group-power"],

    "hyprland/workspaces": {
		"format": "{icon} {windows}",
		"format-icons": {
			"magic": "󱡄 "
		},
		"persistent-workspaces": {
			"*": 0
		},
		//"window-rewrite-default": " ",
		"window-rewrite": {
			"class<firefox>": " ", // Windows whose classes are "firefox",
			"kitty": " ",
			"class<emacs>": " "
		},
		"show-special": true
	},

	"hyprland/window": {
		"format": "󱞡  {}",
		"separate-outputs": true,
		"max-length": 100
	},

	"group/group-power": {
		"orientation": "horizontal",
		"drawer": {
			"transition-duration": 500,
			"transition-left-to-right": false,
			"children-class": "drawer"
		},
		"modules": [
			"clock",
			"custom/reboot",
			"custom/shutdown",
			"custom/quit",
			"custom/suspend"
		]
	},

	"custom/quit": {
		"format": "󰍃 ",
		"tooltip": false,
		"on-click": "hyprctl dispatch exit"
	},

	"custom/reboot": {
		"format": " ",
		"tooltip": false,
		"on-click": "reboot",
	},

	"custom/shutdown": {
		"format": "⏻ ",
		"tooltip": false,
		"on-click": "shutdown",
	},

	"custom/suspend": {
		"format": "󰒲 ",
		"tooltip": false,
		"on-click": "systemctl suspend"
	},

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%a %b %d}",
        "tooltip": false
    },
	
	// REPLACED WITH UPOWER FOR NOW DUE TO BAD PERFORMANCE
