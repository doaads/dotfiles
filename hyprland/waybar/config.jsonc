	"upower": {
		"native-path": "BAT0",
		"icon-size": 16,
		"tooltip": true,
		"tooltip-spacing": 16
	},

    "network": {
        "format": "{ifname}",
        "format-wifi": "  {essid}",
        "format-ethernet": "  {ifname}",
        "format-disconnected": "󱘖 ",
        "tooltip-format-wifi": " {signalStrength}%",
        "max-length": 30,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/network_menu.xml",
        "menu-actions": {
        	"nmtui": "kitty -e nmtui-connect",
        	"nmcm": "nm-connection-editor"
		}
    },

    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-bluetooth": "{icon}  {volume}%",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },

	"power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": " ",
        "performance": " ",
        "balanced": " ",
        "power-saver": " "
      }
    },

    "custom/news": {
    	"format": "󱀁 ",
    	"on-click": "emacsclient --eval '(elfeed-update)' && emacsclient -c --eval '(elfeed)'"
	}
},
