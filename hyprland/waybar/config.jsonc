{
    "layer": "top",
    "position": "top",
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["hyprland/window"],
    "modules-right": ["tray", "upower", "power-profiles-daemon", "pulseaudio", "clock"],

    "hyprland/workspaces": {
		"format": "{icon} {windows}",
		"format-icons": {
			"magic": "󱡄 "
		},
		"persistent-workspaces": {
			"*": 2
		},
		"window-rewrite-default": "",
		"window-rewrite": {
			"class<firefox>": " ", // Windows whose classes are "firefox",
			"kitty": " "
		},
		"show-special": true
	},

	"hyprland/window": {
		"format": "󱞡  {}",
		"separate-outputs": true,
		"max-length": 100
	},

    "clock": {
        "format": "{:%H:%M}",
        "format-alt": "{:%a %b %d}",
        "tooltip": false
    },
	
