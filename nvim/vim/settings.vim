" BASIC VIM SETTINGS 

" termcolors
set termguicolors

" general editor settings
set background=dark
set number
set relativenumber
set ignorecase

" indentation
set tabstop=4
set softtabstop=8
set shiftwidth=4
set autoindent
set copyindent

set smarttab
set expandtab

set showmatch

set completeopt
set wildmenu
